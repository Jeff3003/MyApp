<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dog"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"

        />

    <EditText
        android:drawableEnd="@drawable/baseline_person"
        android:layout_margin="20sp"
        android:padding="10sp"
        android:id="@+id/usuario"
        android:layout_below="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Insira o nome do usuario" />


    <EditText
        android:drawableEnd="@drawable/baseline_lock"
        android:layout_margin="20sp"
        android:padding="10sp"
        android:id="@+id/senha"
        android:layout_below="@+id/usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Insira a senha" />

    <Button
        android:layout_below="@+id/senha"
        android:id="@+id/btnEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar" />

    <Button
        android:id="@+id/btnSair"
        android:layout_below="@+id/btnEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair" />




</RelativeLayout>